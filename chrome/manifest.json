{
  "manifest_version": 3,
  "name": "Listing Retrival",
  "version": "2024.1.0.3",
  "description": "Retrive listing from a website",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://www.mercari.com/*",
    "https://www.ebay.com/*",
    "https://www.etsy.com/*",
    "https://shopgoodwill.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "icons":{
    "128": "ListFlow_icon.png"
  }

}
